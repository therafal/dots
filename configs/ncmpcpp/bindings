# Movement

def_key "j"
    scroll_down
def_key "k"
    scroll_up

def_key "h"
    previous_column
def_key "l"
    next_column


# Search

def_key "/"
    find
def_key "/"
    find_item_forward

def_key "n"
    next_found_item
def_key "N"
    previous_found_item


# Controls

def_key "g"
    pause
def_key "space"
    run_action
def_key "space"
    play_item

def_key "ctrl-h"
    previous
def_key "ctrl-l"
    next

# Queue

def_key "d"
    delete_playlist_items
def_key "ctrl-d"
    clear_playlist
def_key "ctrl-d"
    clear_main_playlist

def_key "J"
    move_selected_items_down
def_key "K"
    move_selected_items_up


# Volume

def_key "-"
    volume_down
def_key "="
    volume_up


# Playlist

def_key "escape"
    show_playlist

# Browse

def_key "e"
    show_browser
def_key "e"
    change_browse_mode

# Search

def_key "f"
    show_search_engine
def_key "f"
    reset_search_engine

# Library

def_key "b"
    show_media_library
def_key "b"
    toggle_media_library_columns_mode

# Playlist Editor

def_key "p"
    show_playlist_editor

# Tag Editor

def_key "t"
    show_tag_editor

# Edit

def_key "i"
    edit_song
def_key "i"
    edit_library_tag
def_key "i"
    edit_library_album
def_key "i"
    edit_directory_name
def_key "i"
    edit_playlist_name
def_key "i"
    edit_lyrics

# Info

def_key "n"
    show_song_info
def_key "N"
    show_artist_info

# Misc

def_key "+"
    show_clock

def_key "."
    show_lyrics
